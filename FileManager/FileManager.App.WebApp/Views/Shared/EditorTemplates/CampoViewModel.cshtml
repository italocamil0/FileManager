@model CampoViewModel
<div>
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        
        @Html.HiddenFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        
        <div  class="form-group col-md-11">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        
            <div class="form-group col-md-4">
                <label asp-for="Tamanho" class="control-label"></label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>
        
    </div>
    <div class="col-md-4">
        
            <div class="form-group col-md-8">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>        
    </div>
</div>