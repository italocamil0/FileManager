@model FileManager.App.WebApp.Models.ArquivoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Deletar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("FileManager", "Index", "Home")
            </li>
            <li>
                @Html.ActionLink("Arquivos", "Index", "Arquivos")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <partial name="~/Views/Arquivos/_DeleteDetailsPartial.cshtml" , model="Model" />
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-offset-1 col-md-11">
                    <a asp-action="Index" class="btn btn-white">Voltar para lista</a>
                    <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#deleteConfirmationModal">
                        Deletar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal inmodal" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                <i class="fa fa-ban modal-icon"></i>
                <h4 class="modal-title">Confirmar exclusão</h4>
            </div>
            <div class="modal-body">
                <p>
                    Você deseja deletar esta tabela: <strong>@Model?.Tabela.ToUpper()</strong>
                </p>
                @using (Html.BeginForm("Delete", "Arquivos", FormMethod.Post, new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Tabela)                    
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Não</button>
                <button type="button" class="ladda-button btn btn-primary" onclick="$('#delete-form').submit();" data-style="zoom-in">Sim</button>
            </div>
        </div>
    </div>
</div>