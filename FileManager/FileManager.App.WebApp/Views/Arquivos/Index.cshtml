@model IEnumerable<ArquivoViewModel>

@{
    ViewData["Title"] = "Arquivos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Home", "Index", "Home")
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="Arquivos/Create" class="btn btn-primary">Registrar arquivo</a>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInDown">
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Tabela)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Esquema)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Prefixo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Posicional)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Divisor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FrequenciaExecucao)
                            </th>                           
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tabela)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Esquema)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prefixo.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Posicional)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Divisor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FrequenciaExecucao.Frequencia)
                                </td>                               
                                <td class="text-right">                                   
                                    <a class="btn btn-warning" asp-controller="Arquivo" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                                    <a disable-by-claim-name="Produto" disable-by-claim-value="Editar" class="btn btn-info" asp-controller="Arquivo" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil"></spam> </a>
                                    <a disable-by-claim-name="Produto" disable-by-claim-value="Excluir" class="btn btn-danger" asp-controller="Arquivo" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/plugins/dataTables/datatables.min.css" />
}

@section ScriptPage{
    <script src="~/js/plugins/dataTables/datatables.min.js"></script>
    <script src="~/js/custom/setDataTables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            setDataTable();
        });
    </script>
}